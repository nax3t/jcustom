---
const steps = [
  { icon: 'plan.svg', alt: 'Planning and design phase icon', title: 'Plan', num: '01' },
  { icon: 'build.svg', alt: 'Construction and build phase icon', title: 'Build', num: '02' },
  { icon: 'enjoy.svg', alt: 'Completed outdoor space enjoyment icon', title: 'Enjoy', num: '03', extraClass: 'relative -top-2.5' },
];
---

<section class="py-section px-6 md:px-8" id="process">
  <div class="max-w-[1318px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-16">
      <!-- Text -->
      <div
        class="lg:col-span-1"
        x-data
        x-intersect.once="$el.classList.add('animate-fade-up')"
      >
        <div class="section-label mb-4">
          <span>How It Works</span>
        </div>
        <h2 class="font-display text-[clamp(2.5rem,4vw,3.25rem)] leading-[1.15] tracking-[-0.01em] mb-5">
          Work Process
        </h2>
        <p class="text-gray-text text-lg leading-relaxed">
          We work closely with you to design your perfect outdoor space. Our collaborative planning process and expert craftsmanship ensure your vision becomes reality, creating a backyard retreat you'll treasure for many years to come.
        </p>
      </div>

      <!-- Steps -->
      {steps.map((step, i) => (
        <div
          class="text-center pt-5"
          x-data
          x-intersect.once="$el.classList.add('animate-fade-up')"
          style={`animation-delay: ${(i + 1) * 0.15}s`}
        >
          <div class="text-[11px] font-semibold tracking-[0.15em] text-accent uppercase mb-3">{step.num}</div>
          <div class="mb-4">
            <img
              src={`/images/svg/${step.icon}`}
              alt={step.alt}
              class:list={['w-[120px] h-[120px] mx-auto', step.extraClass]}
              loading="lazy"
            />
          </div>
          <h3 class="text-2xl font-semibold tracking-tight">{step.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>
