---
import { Image } from 'astro:assets';
import promo1 from '../assets/images/promo-1.webp';
import promo2 from '../assets/images/promo-2.webp';
---

<section class="bg-dark text-white overflow-hidden relative grain">
  <div class="max-w-[1318px] mx-auto px-6 md:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-[1.2fr_1fr] gap-8 lg:gap-12">
      <!-- Images: 2-image overlap — both absolutely positioned within stretching grid cell -->
      <div class="relative min-h-[350px] lg:min-h-0">
        <!-- Main image — top-left, large -->
        <div
          class="absolute top-[8%] left-0 w-[78%] overflow-hidden transform-gpu z-[1]"
          x-data
          x-intersect.once="$el.querySelector('img').classList.add('animate-scale-in')"
        >
          <Image
            src={promo1}
            alt="Elegant pergola with string lights and curtains creating an intimate outdoor living space at dusk"
            class="w-full scale-[1.2]"
            widths={[400, 600, 800]}
            sizes="(max-width: 1024px) 78vw, 43vw"
          />
        </div>
        <!-- Overlapping image — bottom-right -->
        <div
          class="absolute bottom-[8%] right-0 w-[62%] overflow-hidden transform-gpu z-[2]"
          x-data
          x-intersect.once="$el.querySelector('img').classList.add('animate-scale-in')"
        >
          <Image
            src={promo2}
            alt="Luxury backyard patio with pool, outdoor fireplace, and comfortable seating at twilight"
            class="w-full scale-[1.2]"
            style="animation-delay: 0.2s"
            widths={[400, 600]}
            sizes="(max-width: 1024px) 62vw, 34vw"
          />
        </div>
      </div>

      <!-- Text -->
      <div class="flex items-center py-16 lg:py-28">
        <div x-data x-intersect.once="$el.classList.add('animate-fade-up')" class="opacity-0">
          <div class="section-label section-label-light mb-6">
            <span>Your Vision, Our Craft</span>
          </div>
          <h3 class="font-display text-[clamp(2rem,4vw,2.75rem)] leading-[1.15] tracking-[-0.01em] mb-6">
            Your outdoor space, reimagined.
          </h3>
          <p class="text-white/70 text-lg leading-relaxed mb-10">
            A well-built outdoor living area increases your property value, gives you a year-round
            entertainment space, and is engineered to handle the Texas heat, storms, and everything
            in between.
          </p>
          <a href="#showcase" class="btn btn-outline">
            <span>See Our Work</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
