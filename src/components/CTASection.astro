---
import { Image } from 'astro:assets';
import img1 from '../assets/images/showcase/IMG_0455-1.webp';
import img2 from '../assets/images/showcase/IMG_1780.webp';
import img3 from '../assets/images/showcase/IMG_2568.webp';

const reasons = [
  {
    num: '01',
    title: "Fort Worth's Trusted Craftsmen Since 2005",
    description:
      'Founded in 2005 and headquartered in Benbrook, our well-trained craftsmen have delivered premium outdoor spaces across greater DFW for nearly two decades.',
  },
  {
    num: '02',
    title: 'Commitment to Customer Satisfaction',
    description:
      'Rated 5 stars on Google and recommended on Nextdoor, our clients highlight our attention to detail, expertise, and professionalism throughout every project.',
  },
  {
    num: '03',
    title: 'Free Consultation & Quality Guarantee',
    description:
      "Get started with a free consultation. We build with industry-leading materials from Trex, TimberTech, and other trusted brands \u2014 and stand behind every project we complete.",
  },
];
---

<section class="py-section px-6 md:px-8">
  <div class="max-w-[1318px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-[7fr_5fr] gap-12 lg:gap-20">
      <!-- Images: 3-image overlap (original call-action-2 pattern) -->
      <div class="relative mr-[33px] mt-[15px] overflow-hidden order-2 lg:order-1">
        <!-- Top-left image (absolute) -->
        <div
          class="absolute top-0 left-0 w-[36.85%] overflow-hidden transform-gpu"
          x-data
          x-intersect.once="$el.querySelector('img').classList.add('animate-scale-in')"
        >
          <Image
            src={img1}
            alt="Beautiful residential deck with railing and outdoor seating overlooking a landscaped yard"
            class="w-full scale-[1.2]"
            widths={[300, 500]}
            sizes="(max-width: 1024px) 37vw, 18vw"
          />
        </div>
        <!-- Center image (relative, establishes container height) -->
        <div
          class="relative w-[77.15%] mx-auto my-[120px] overflow-hidden transform-gpu"
          x-data
          x-intersect.once="$el.querySelector('img').classList.add('animate-scale-in')"
        >
          <Image
            src={img2}
            alt="Covered pergola with dining area, built-in grill, and fire pit at golden hour"
            class="w-full scale-[1.2]"
            style="animation-delay: 0.15s"
            widths={[400, 600]}
            sizes="(max-width: 1024px) 77vw, 39vw"
          />
        </div>
        <!-- Bottom-right image (absolute) -->
        <div
          class="absolute bottom-0 right-0 w-[36.85%] overflow-hidden transform-gpu"
          x-data
          x-intersect.once="$el.querySelector('img').classList.add('animate-scale-in')"
        >
          <Image
            src={img3}
            alt="Charming farmhouse patio with outdoor lounge sofa and bistro table"
            class="w-full scale-[1.2]"
            style="animation-delay: 0.3s"
            widths={[300, 500]}
            sizes="(max-width: 1024px) 37vw, 18vw"
          />
        </div>
      </div>

      <!-- Text -->
      <div
        class="order-1 lg:order-2 opacity-0"
        x-data
        x-intersect.once="$el.classList.add('animate-fade-up')"
      >
        <div class="section-label mb-4">
          <span>Why Us</span>
        </div>
        <h2 class="font-display text-[clamp(2.5rem,5vw,3.25rem)] leading-[1.15] tracking-[-0.01em] mb-14 sm:mb-8">
          Why choose us?
        </h2>

        <dl class="space-y-8 mb-12 sm:mb-8">
          {reasons.map((r) => (
            <div class="group">
              <dt class="flex items-baseline gap-4 mb-2">
                <span class="text-accent text-[13px] font-semibold tracking-wider shrink-0">{r.num}</span>
                <span class="text-xl font-semibold tracking-tight">{r.title}</span>
              </dt>
              <dd class="text-gray-text text-base leading-relaxed ml-0 pl-10">
                {r.description}
              </dd>
            </div>
          ))}
        </dl>

        <a href="#contact" class="btn btn-primary">
          <span>Start Project</span>
        </a>
      </div>
    </div>
  </div>
</section>
